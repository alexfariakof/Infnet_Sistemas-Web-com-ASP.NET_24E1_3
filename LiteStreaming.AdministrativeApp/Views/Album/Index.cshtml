@using Application.Streaming.Dto
@model IEnumerable<AlbumDto>
@{
    ViewData["Title"] = "Album";
}
@if (ViewBag.Alert != null)
{
    <partial name="Alert" model="(AlertViewModel)ViewBag.Alert" />
}

@if (ViewBag.LoginError != null)
{
    <p style="color: red;">@ViewBag.LoginError</p>
    <div style="display:block; position:absolute; height:100%; width:100%;"></div>

}
<a type="button" class="btn btn-primary mb-2" role="button" asp-controller="Album" asp-action="Create" >
    <i class="bi bi-plus-circle">Adicionar Álbum</i>    
</a>
<div class="text-center border border-2 border-dark rounded-2">
    <table class="table table-striped table-dark mb-0">
        <thead>
            <tr>
                <th scope="col" class="text-start">
                    <a asp-action="Index" asp-route-sortExpression="@(ViewData["SortParamName"].ToString().Replace("_desc", "") !="name" ? "name_desc" : ViewData["SortParamName"])">
                        <i class="@(ViewData["SortParamName"].ToString().Replace("_desc", "") == "name" ? ViewData["SortIcon"] : "bi bi-sort-alpha-up")">Nome</i>
                    </a>
                </th>
                <th scope="col" class="text-start">Backdrop</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-start">@item.Name</td>
                    <td class="w-auto text-start"><img class="img-fluid" width="36" height="36" src=@item.Backdrop /></td>
                    <td class="w-auto text-center">
                        <a type="button" class="btn btn-outline-warning rounded-circle p-2 border border-2 border-secondary" data-toggle="tooltip" data-placement="bottom" title="Editar usuário" href="@Url.Action("Edit", "Album", new { Id = item.Id })">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a type="button" class="btn btn-outline-danger rounded-circle p-2 border border-2 border-secondary" data-toggle="tooltip" data-placement="bottom" title="Excluir usuário" href="@Url.Action("Delete", "Album", item)">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
