@using Application.Streaming.Dto
@model MusicDto
@if (ViewBag.Alert != null)
{
    <partial name="Alert" model="(AlertViewModel)ViewBag.Alert" />
}

<button type="button" class="btn btn-primary mb-2" role="button" onclick="backHistory()">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
    </svg>
    Voltar
</button>
<div class="d-flex flex-column align-items-stretch m-0 p-2 border border-2 border-dark bg-dark rounded-2 align-items-center justify-content-center text-light">
    <form method="post" asp-controller="Music" asp-action="Save" >
        <div class="row mb-2">
            <label for="name" class="col-1 col-form-label fs-5 text-end">Nome</label>
            <div class="col">
                @Html.TextBoxFor(music => music.Name, new { @class = "form-control", @id = "name", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="url" class="col-1 col-form-label fs-5 text-end">Url</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(music => music.Url, new { @class = "form-control ", @id = "url", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Url"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="duration" class="col-1 col-form-label fs-5 text-end">Duração</label>
            <div class="col-sm-2">
                @Html.TextBoxFor(music => music.Duration, new { @class = "form-control ", @id = "duration", @required = "", @type = "number" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Duration"></span>
            </div>
        </div>
        <div class="row mb-3 d-flex align-items-center justify-content-center ">
            <button type="submit" class="btn btn-primary w-25 fs-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1z" />
                </svg>
                Salvar
            </button>
        </div>
    </form>
</div>