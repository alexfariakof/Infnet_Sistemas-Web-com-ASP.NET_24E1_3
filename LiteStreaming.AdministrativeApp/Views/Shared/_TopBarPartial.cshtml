@model PagerModel
<div class="d-flex flex-row justify-content-between">
    <div>
        <form asp-action="Index">
            <span class="btn-group">
                <input class="form-control" type="text" name="SearchText" placeholder="Pesquisar" value="@Model.SearchText" />
                <input class="p-1 m-lg-2 btn btn-sm btn-danger rounded-2" type="submit" value="Pesquisar" />
            </span>
        </form>
    </div>
    <div>
        <a type="button" class="btn btn-primary mb-2" role="button" href="@ViewContext.RouteData.Values["controller"].ToString()/Create">
            <i class="bi bi-plus-circle"> Adicionar</i>
        </a>
    </div>
</div>