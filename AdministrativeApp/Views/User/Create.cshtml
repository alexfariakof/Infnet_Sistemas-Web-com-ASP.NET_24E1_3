@using Application.Administrative.Dto
@model AdministrativeAccountDto
@{
    if (ViewBag.ErrorMessage != null)
    {
        <script>
            alert("@Html.Raw(ViewBag.ErrorMessage)");
        </script>
    }
}

<div class="d-flex flex-column align-items-stretch m-2 p-2 border border-2 border-dark bg-dark rounded-4 align-items-center justify-content-center text-light">
    <form method="post" asp-controller="User" asp-action="Save">
        <div class="row mb-3">
            <label for="name" class="col-1 col-form-label fs-5 text-end">Nome</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(account => account.Name, new { @class = "form-control", @id = "name", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-1 col-form-label fs-5 text-end">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(account => account.Email, new { @class = "form-control ", @id = "email", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="password" class="col-1 col-form-label fs-5 text-end">Senha</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(account => account.Password, new { @class = "form-control", @id = "password", @type = "password", @autocomplete = "new-password", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <fieldset class="row mb-3">
            <legend class="col-form-label col-1 pt-0 fs-5 text-end">Perfil</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="perilAdmin" asp-for="PerfilType" value="@PerfilDto.Admin" checked />
                    <label class="form-check-label" for="perilAdmin">
                        Acesso Total
                    </label>
                </div>
                <div class="form-check disabled">
                    <input class="form-check-input" type="radio" id="perilNormal" asp-for="PerfilType" value="@PerfilDto.Normal" />
                    <label class="form-check-label" for="perilNormal">
                        Normal
                    </label>
                </div>
            </div>
        </fieldset>
        <div class="row mb-3  d-flex align-items-center justify-content-center ">
            <button type="submit" class="btn btn-primary w-25 fs-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1z" />
                </svg>
                Salvar
            </button>
        </div>
    </form>
</div>